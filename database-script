-- This SQL query can be copied, pasted, and executed in pgAdmin.

-- We use the pgAdmin's user interface to create the database and this script was generated automatically.
-- Create the database.
CREATE DATABASE "MovieProductionCompany"
    WITH
    OWNER = postgres
    ENCODING = 'UTF8'
    LOCALE_PROVIDER = 'libc'
    CONNECTION LIMIT = -1
    IS_TEMPLATE = False;

-- Create table Personal
CREATE TABLE Personal (
    UnionID SERIAL PRIMARY KEY,
    Name VARCHAR(50),
    DateOfBirth DATE,
    Nationality VARCHAR(50),
    Biography VARCHAR(100),
    ContactInfo VARCHAR(100)
);

-- Create table ProductionStaff
CREATE TABLE ProductionStaff (
    UnionID INT,
    Role VARCHAR(50),
    FOREIGN KEY (UnionID) REFERENCES Personal (UnionID)
);

-- Create table Movies
CREATE TABLE Movies (
    MovieID SERIAL PRIMARY KEY,
    Title VARCHAR(100),
    ReleaseDate DATE,
    AwardsWon INT
);

-- Create table Contracts
CREATE TABLE Contracts ( 
    ContractID SERIAL PRIMARY KEY,
    UnionID INT,
    MovieID INT,
    Cost DECIMAL(10,2),
    FOREIGN KEY (UnionID) REFERENCES Personal (UnionID),
    FOREIGN KEY (MovieID) REFERENCES Movies (MovieID)
);





